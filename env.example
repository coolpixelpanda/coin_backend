PORT=3000

# Prisma PostgreSQL connection
# For Vercel deployment, use Prisma Accelerate connection string (prisma+postgres://)
# For local development, use direct PostgreSQL connection string (postgres://)
PRISMA_DATABASE_URL="postgres://user:password@host:5432/database?sslmode=require"
POSTGRES_URL="postgres://user:password@host:5432/database?sslmode=require"

# Security
BCRYPT_SALT_ROUNDS=10

# CORS
# Comma-separated list of allowed origins. Use * to allow all.
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3001

# Logging
LOG_LEVEL=info

# Price cache TTL (ms)
PRICE_CACHE_TTL_MS=60000

# Business wallet addresses
BTC_WALLET_ADDRESS=
ETH_WALLET_ADDRESS=
USDT_WALLET_ADDRESS=

# Transaction confirmations
TX_MIN_CONFIRMATIONS=1
TX_POLL_INTERVAL_MS=30000
BTC_NETWORK=mainnet
BTC_CONFIRMATION_PROVIDERS=blockstream,mempool,blockcypher

