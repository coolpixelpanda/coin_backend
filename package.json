{
  "name": "crypto-backend",
  "version": "1.0.0",
  "description": "Node.js backend for auth, crypto prices, and exchange using MySQL",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "start:mainnet": "node server.js",
    "start:testnet": "set BTC_NETWORK=testnet&& node server.js",
    "dev:mainnet": "nodemon server.js",
    "dev:testnet": "set BTC_NETWORK=testnet&& nodemon server.js",
    "tx:seed": "node scripts/seedPendingTx.js",
    "tx:runOnce": "node scripts/runWatcherOnce.js",
    "tx:test": "node scripts/testWatcher.js",
    "addr:gen:testnet": "node scripts/genTestnetBtcAddress.js"
  },
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "@noble/secp256k1": "^1.7.1",
    "bech32": "^2.0.0",
    "mysql2": "^3.11.3",
    "pino": "^9.4.0",
    "pino-http": "^10.3.0",
    "pino-pretty": "^11.2.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  }
}
