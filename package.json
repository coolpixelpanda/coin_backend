{
  "name": "crypto-backend",
  "version": "1.0.0",
  "description": "Node.js backend for auth, crypto prices, and exchange using MySQL",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "start:mainnet": "node server.js",
    "start:testnet": "set BTC_NETWORK=testnet&& node server.js",
    "dev:mainnet": "nodemon server.js",
    "dev:testnet": "set BTC_NETWORK=testnet&& nodemon server.js",
    "tx:seed": "node scripts/seedPendingTx.js",
    "tx:runOnce": "node scripts/runWatcherOnce.js",
    "tx:test": "node scripts/testWatcher.js",
    "addr:gen:testnet": "node scripts/genTestnetBtcAddress.js",
    "postinstall": "prisma generate",
    "build": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:seed": "node prisma/seed.js"
  },
  "license": "MIT",
  "dependencies": {
    "@noble/secp256k1": "^1.7.1",
    "@prisma/client": "^7.0.0",
    "bcrypt": "^5.1.1",
    "bech32": "^2.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "mysql2": "^3.11.3",
    "pino": "^9.4.0",
    "pino-http": "^10.3.0",
    "pino-pretty": "^11.2.2",
    "prisma": "^7.0.0",
    "vercel": "^48.10.4"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "nodemon": "^3.1.10",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
